generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Producto {
  id                   Int       @id @default(autoincrement())
  codigo               Int       @unique
  nombre               String
  talla                String?
  color                String?
  marca_descripcion    String?
  rubro                String?
  subrubro_descripcion String?   // AGREGAR ESTA L√çNEA
  tipo_calzado         String?
  temporada            String?
  precio_lista         Float
  precio_contado       Float?
  precio_debito        Float?
  precio_regular       Float?
  stock_disponible     Int
  subrubro             Int
  imagen_url           String?
  fecha_modificacion   DateTime?
  fecha_compra         DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @default(now()) @updatedAt

  @@index([rubro])
  @@index([tipo_calzado])
  @@index([talla])
  @@index([precio_lista])
  @@index([stock_disponible])
}